			function validform()
			{
				//获取参数
				var uname=document.form1.uname.value;
				if(uname==""||uname==null)
				{
					alert("用户名不能为空！")
					document.form1.uname.focus();
				}
				
				var upass=document.form1.upass.value;
				if(upass==""||upass==null)
				{
					alert("密码不能为空！")
					document.form1.upass.focus();
				}
			}
