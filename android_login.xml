<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffff99">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />
     <TextView 
         android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入用户："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        />
     <TextView 
         android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入密码："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        />
     <TextView 
         android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        />
     <TextView 
         android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        />
     <TextView 
         android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="爱好："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        />
     <TextView 
         android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="班级："
        android:textSize="20sp"
        android:textColor="#D2691E"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        />
     <EditText 
        android:id="@+id/etxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入用户"
        android:textSize="15sp"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/txt1"
        android:layout_alignBottom="@id/txt1"
        />
     <EditText 
        android:id="@+id/etxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入密码"
        android:textSize="15sp"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/txt2"
        android:layout_alignBottom="@id/txt2"
        />
     <EditText 
        android:id="@+id/etxt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请确认密码"
        android:textSize="15sp"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/txt3"
        android:layout_alignBottom="@id/txt3"
        />
     <RadioGroup
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt4"
        android:layout_alignBottom="@id/txt4"
        android:orientation="horizontal"
        >
     <RadioButton
         android:id="@+id/rbt1"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="男"
        android:textSize="15sp"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/txt4"
        android:layout_alignBottom="@id/txt4"
        />
     <RadioButton
         android:id="@+id/rbt2"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女"
        android:textSize="15sp"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/rbt1"
        android:layout_alignBottom="@id/rbt1"
        />
     </RadioGroup>
     <CheckBox
         android:id="@+id/cbox1"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读书"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/txt5"
        android:layout_alignBottom="@id/txt5"
        />
     <CheckBox
         android:id="@+id/cbox2"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运动"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/cbox1"
        android:layout_alignBottom="@id/cbox1"
        android:checked="true"
        />
     <CheckBox
         android:id="@+id/cbox3"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏"
        android:textColor="#D2691E"
        android:layout_toRightOf="@id/cbox2"
        android:layout_alignBottom="@id/cbox2"
        android:checked="true"
        />
     <Spinner
         android:id="@+id/spinner1"
         android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt6"
        android:layout_alignBottom="@id/txt6"
        
        />
     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/spinner1"
         />
     <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="登录"
        android:textSize="20sp"
        android:textColor="#D2691E" 
        android:layout_marginLeft="180dp"
        android:layout_marginTop="360dp"
         />
     <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="注册"
        android:textSize="20sp"
        android:textColor="#D2691E" 
        android:layout_marginLeft="50dp"
        android:layout_marginTop="360dp"
         />
    

</RelativeLayout>
